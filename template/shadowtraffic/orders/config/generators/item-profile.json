{
  "name": "item-profiles",
  "topic": "shadowtraffic.item.profile",
  "key": {
    "_gen": "uuid"
  },
  "value": {
    "name": {
      "_gen": "string",
      "expr": "#{Commerce.productName}"
    },
    "description": {
      "_gen": "string",
      "expr": "#{Lorem.paragraph}"
    },
    "price": {
      "_gen": "uniformDistribution",
      "bounds": [
        2,
        2000
      ],
      "decimals": 2
    }
  },
  "localConfigs": {
    "kafkaValueAvroSchemaHint": {
      "_gen": "loadJsonFile",
      "file": "/schemas/avro/item.avsc"
    }
  }
}